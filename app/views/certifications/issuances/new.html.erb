<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="box box-default">
      <div class="box-header">
        <h3 class="box-title"> Issuance Details </h3>
      </div>
      <div class="box-body">
        <center><%=image_tag(@issuance.issuable.client.avatar.url(:thumb), class: "img-circle") %></center><br />
        <h4><b><center><%= @issuance.issuable.client_full_name %></center></b></h4> <hr>
        <%= simple_form_for [@certification, @issuance], url: :certification_issuances do |f| %>
          <%= f.error_notification %>
          <%= f.input :reference_number, label: "CLN Number" %>
          <%= f.input :cars_date_received, label: "Date of Receipt of CARS:", as: :string, input_html: { class: "datepicker" } %>
          <%= f.input :printing_date, label: "Date of Printing of NC/COC:", as: :string, input_html: { class: "datepicker" } %>
          <%= f.input :issue_date, label: "Date Claimed", as: :string, input_html: { class: "datepicker" } %>
          <div class="modal-footer">
            <%= f.submit "Issue Certificate", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>