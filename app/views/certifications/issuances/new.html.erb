<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="box box-default">
      <div class="box-header">
        <h3 class="box-title"> Issuance Details </h3>
      </div>
      <div class="box-body">
        <%= simple_form_for [@certification, @issuance], url: :certification_issuances do |f| %>
          <%= f.error_notification %>
          <%= f.input :reference_number %>
          <%= f.input :issue_date, as: :string, input_html: { class: "datepicker" } %>
          <div class="modal-footer">
            <%= f.submit "Issue Certificate", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>