<%=simple_form_for @trainee do |f| %>
  <%=f.error_notification %>
  <%= f.input :first_name %>
  <%= f.input :middle_name %>
  <%= f.input :last_name %>
  <%= f.input :sex, collection: Trainee.sexes.keys.to_a.map{|a| [a.titleize, a]}, as: :radio_buttons %>
  <%= f.input :date_of_birth, as: :string %>
  <%= f.input :contact_number %>
  <%= f.submit "Save Trainee" %>
<% end %>
