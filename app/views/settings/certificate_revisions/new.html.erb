<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="box box-solid">
      <div class="box-header">
        <h3 class="box-title"> Revision Details </h3>
      </div>
      <div class="box-body">
        <%=simple_form_for @revision, url: :settings_certificate_revisions do |f| %>
          <%=f.error_notification %>
          <%=f.input :revision_date, as: :string, input_html: { class: "datepicker" } %>
          <%= f.input :revision_number, as: :string %>
        <%= f.submit "Save Revision", class: "btn btn-primary btn-flat" %>
      <% end %>
    </div>
  </div>
</div>