<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="box box-solid">
      <div class="box-header">
        <h3 class="box-title">  RWAC Upload Details </h3>
      </div>
      <div class="box-body">
        <i class="fa fa-file-excel-o"></i>
<%=simple_form_for @registry, url: :assessor_registries, multipart: true do |f| %>
  <%=f.error_notification %>

  <%=f.input :spreadsheet, as: :file, label: "Upload Spreadsheet", input_html: { id: "registry-file" } %>
  <%= f.input :name %>
  <%= f.input :date, as: :string, input_html: { class: "datepicker"} %>

  <div class="box-footer">
  <%=f.submit "Upload Registry", class: "btn btn-primary pull-right", data: {disable_with: "Uploading and parsing file..."} %>
</div>
<% end %>
