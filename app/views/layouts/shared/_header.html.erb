<header class="main-header">

   <!-- Logo -->
   <a href="index2.html" class="logo">
     <!-- mini logo for sidebar mini 50x50 pixels -->
     <span class="logo-mini"><b>L</b>amut</span>
     <!-- logo for regular state and mobile devices -->
     <span class="logo-lg"><b><%=site_name %></b> Lamut</span>
   </a>

   <!-- Header Navbar: style can be found in header.less -->
   <nav class="navbar navbar-static-top">
     <!-- Sidebar toggle button-->
     <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
       <span class="sr-only">Toggle navigation</span>
     </a>
     <!-- Navbar Right Menu -->
     <div class="navbar-custom-menu">
       <ul class="nav navbar-nav">
         <!-- Messages: style can be found in dropdown.less-->

         <li class="dropdown user user-menu">
           <a href="#" class="dropdown-toggle" data-toggle="dropdown">
             <%#=image_tag(current_user.photo.url(:small), width: 20, height: 20, class: "img-circle") %>
             <span class="hidden-xs"><%#=current_user.first_name %></span>
           </a>
           <ul class="dropdown-menu">
             <!-- User image -->
             <li class="user-header">
               <%#=image_tag(current_user.photo.url(:thumb), class: "img-circle") %>

               <p>
                 <%#=current_user.first_name_and_last_name %>
                 <small><%#=current_user.role.try(:titleize).try(:upcase) %></small>
               </p>
             </li>
             <!-- Menu Body -->
             <li class="user-body">
               <div class="row">
                 <div class="col-xs-4 text-center">
                   <a href="#">Followers</a>
                 </div>
                 <div class="col-xs-4 text-center">
                   <a href="#">Sales</a>
                 </div>
                 <div class="col-xs-4 text-center">
                   <a href="#">Friends</a>
                 </div>
               </div>
               <!-- /.row -->
             </li>
             <!-- Menu Footer-->
             <li class="user-footer">
               <div class="pull-left">
                 <%#=link_to 'Profile', settings_employee_path(current_user),  class: "btn btn-default btn-flat" %>
               </div>
               <div class="pull-right">
                <%#=link_to 'Sign out', destroy_user_session_path, method: :delete, class: "btn btn-danger btn-flat" %>
               </div>
             </li>
           </ul>
         </li>
         <!-- Control Sidebar Toggle Button -->

       </ul>
     </div>

   </nav>
 </header>
