<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
      <!-- Sidebar user panel -->
      <div class="user-panel">
        <div class="pull-left image">
          <%#=image_tag(current_user.photo.url(:small), class: "img-circle", width: 30, height: 30) %>
        </div>
        <div class="pull-left info">
          <p><%#=current_user.first_name_and_last_name %></p>
          <a href="#"><i class="fa fa-circle text-success"></i> <%#=current_user.role.try(:titleize).try(:upcase) %></a>
        </div>
      </div>
      <!-- search form -->
      <%#=form_tag searches_path, method: :get, class: "sidebar-form" do %>
      <div class="input-group">
        <%#= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search..." %>
        <span class="input-group-btn">
          <%#= button_tag(type: 'submit', id: "search-btn", class: "btn btn-flat") do %>
            <i class="fa fa-search"></i>
          <%# end %>
        </span>
      </div>
    <%# end %>
      <!-- /.search form -->
      <!-- sidebar menu: : style can be found in sidebar.less -->
      <ul class="sidebar-menu">
          <li><a href="/"><i class="icon-speedometer"></i> <span> &nbsp; &nbsp;  Dashboard</span></a></li>

        <li><a href="/trainees"><i class="icon-people"></i> <span> &nbsp; &nbsp; Trainees</span></a></li>
        <li><a href="/assessment_centers"><i class="icon-home"></i> <span> &nbsp; &nbsp;  Assessment Centers</span></a></li>
        <li><a href="/businesses"><i class="icon-folder"></i> <span> &nbsp; &nbsp;  Reports</span></a></li>
        <%# if current_user.health_officer? %>
        <li><a href="/certificates"><i class="icon-docs"></i> <span> &nbsp; &nbsp;  Certifications</span></a></li>
        <%# if current_user.bplo_officer? %>
          <li><a href="/settings/accounts"><i class="icon-settings"></i> <span> &nbsp; &nbsp;  Setings</span></a></li>
        <%# end %>
          <%# end %>
          <li><a href="/qualifications"><i class="icon-folder"></i> <span> &nbsp; &nbsp;  Qualifications</span></a></li>
    </section>
    <!-- /.sidebar -->
  </aside>
